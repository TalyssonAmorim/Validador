{
  "manifest_version": 3,
  "name": "Validação de CPF e CNPJ",
  "version": "1.0",
  "description": "Valide CPF e CNPJ diretamente no Chrome.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
